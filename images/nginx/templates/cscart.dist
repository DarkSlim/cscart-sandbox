################################################################################
include xtra/upstream.conf;

server {
    
    listen  80;
    server_name ${CSCART_ADDRESS};
    server_name www.${CSCART_ADDRESS};

    ############################################################################

    charset utf-8;

    ############################################################################

    access_log  /var/log/nginx/access.log json;
    error_log   /var/log/nginx/error.log warn;

    ############################################################################

    include xtra/error-40X.conf;
    include xtra/error-50X.conf;

    ############################################################################

    set $root "/var/www/html";
    root $root;

    ############################################################################

    location = /favicon.ico {
        log_not_found off;
    }

    location = /index.php {
        log_not_found off;
    }

    location = /index.html {
        log_not_found off;
    }

    error_page 598 = @backend;

    ############################################################################

    location @backend {
        try_files $uri $uri/ /worker$1/$2$3$5 /worker$1/$2$3index.php =404;
        fastcgi_pass www;
        fastcgi_index index.php;
        fastcgi_read_timeout 360;
        include xtra/fastcgi_params.conf;
    }

    ############################################################################
    # Only for Sandbox
    location @sandbox {
        rewrite  ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?(.*)$ /worker$1/$2$3index.php?$args last;
    }

    ############################################################################

    location  / {
        try_files $uri $uri/ @sandbox;
    }

    ############################################################################

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?api/ {
        rewrite ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?api/(.*)$ /worker$1/$2$3api.php?_d=$3&ajax_custom=1&$args last;
        rewrite_log off;
    }

    ############################################################################

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?var/database/ {
        return 404;
    }

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?var/backups/ {
        return 404;
    }

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?var/restore/ {
        return 404;
    }

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?var/themes_repository/ {
        allow all;
        location ~* \.(tpl|php.?)$ {
            return 404;
        }
    }

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?var/ {
        return 404;
        location ~* /worker([0-9])/(\w+/)?(\w+/)?(\w+/)?(.+\.(js|css|png|jpe?g|gz|yml|xml))$ {
            try_files $uri $uri/ /worker$1/$2$3$5 /worker$1/$2$3index.php?$args;
            allow all;
            access_log off;
            expires 1M;
            add_header Cache-Control public;
            add_header Access-Control-Allow-Origin *;
        }
    }

    ############################################################################

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?app/payments/ {
        return 404;
        location ~ \.php$ {
            return 598;
        }
    }

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?app/addons/rus_exim_1c/ {
        return 404;
        location ~ \.php$ {
            return 598;
        }
    }

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?app/ {
        return 404;
    }

    ############################################################################

    location ~* /worker([0-9])/(\w+/)?(\w+/)?(\w+/)?(.+\.(jpe?g|jpg|ico|gif|png|css|js|pdf|txt|tar|woff|svg|ttf|eot|csv|zip|xml|yml))$ {
        access_log off;
        try_files $uri $uri/ /worker$1/$2$3$5 /worker$1/$2$3index.php?$args;
        expires max;
        add_header Access-Control-Allow-Origin *;
        add_header Cache-Control public;
    }

    ############################################################################      

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?design/ {
        allow all;
        location ~* \.(tpl|php.?)$ {
            return 404;
        }
    }

    ############################################################################

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?images/ {
        allow all;
        location ~* \.(php.?)$ {
            return 404;
        }
    }

    ############################################################################

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?js/ {
        allow all;
        location ~* \.(php.?)$ {
            return 404;
        }
    }

    ############################################################################

    location ~ ^/worker([0-9])/(\w+/)?(\w+/)?(\w+/)?init.php {
        return 404;
    }

    location ~* \.(tpl.?)$ {
        return 404;
    }

    location ~ /\.(ht|git) {
        return 404;
    }

    location ~* /worker([0-9])/(\w+/)?(\w+/)?(\w+/)?(.+\.php)$ {
        return 598 ;
    }

    location ~* \.php$ {
        return 598 ;
    }

    ################################################################################

}
